// This tsconfig basically merges the officially recommended
// @tsconfig/react-native with the plugin seed's apps/demo/tsconfig.json.
{
  "extends": "../../tsconfig.base.json",

  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "_version": "2.0.0",
  "compilerOptions": {
    "rootDirs": [".", "../.."],
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "types": ["react-native", "jest"],
    "lib": ["es2019"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "paths": {
      "~/*": ["src/*"],
      "@demo/shared": ["../../tools/demo/index.ts"],
      "@ammarahm-ed/*": ["../../packages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
